{
  // -------------------------------
  // üóÇÔ∏è File visibility & indexing
  // -------------------------------
  "files.exclude": {
    "wp-admin": true,
    "wp-includes": true,
    "vendor": true,
    "node_modules": true
  },
  "search.useGlobalIgnoreFiles": true,
  "cursor.experimental.codebaseIndexing": true,

  // -------------------------------
  // üß† Intelephense setup
  // -------------------------------
  "intelephense.environment.phpVersion": "8.2",
  "intelephense.files.maxSize": 5000000,
  "intelephense.stubs": [
    "apache",
    "bcmath",
    "bz2",
    "calendar",
    "Core",
    "curl",
    "date",
    "dom",
    "filter",
    "gd",
    "hash",
    "iconv",
    "intl",
    "json",
    "libxml",
    "mbstring",
    "mysqli",
    "openssl",
    "pcre",
    "PDO",
    "Phar",
    "posix",
    "readline",
    "Reflection",
    "session",
    "SimpleXML",
    "SPL",
    "standard",
    "tokenizer",
    "xml",
    "xmlreader",
    "xmlwriter",
    "zip",
    "zlib",
    "wordpress"
  ],

  // -------------------------------
  // üß∞ PHP CS Fixer integration
  // -------------------------------
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "junstyle.php-cs-fixer",
  "php-cs-fixer.workingDirectory": "${workspaceFolder}",
  "php-cs-fixer.executablePath": "C:\\Users\\dback\\AppData\\Roaming\\Composer\\vendor\\bin\\php-cs-fixer.bat",
  "php-cs-fixer.rules": "@PSR12",
  "php-cs-fixer.autoFixBySave": true,
  "php-cs-fixer.autoFixByCommit": false,
  "php-cs-fixer.lastDownload": 0,

  // -------------------------------
  // üêò PHP validation (for XAMPP)
  // -------------------------------
  "php.validate.executablePath": "C:\\xampp\\php\\php.exe",

