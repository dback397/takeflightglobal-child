{
  "name": "tfg/tfg-child-theme",
  "type": "project",
  "require": {},
  "autoload": {
    "psr-4": {
      "TFG\\": "app/"
    }
  },
  "require-dev": {
    "phpcompatibility/php-compatibility": "^9.3",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1",
    "friendsofphp/php-cs-fixer": "^3.66"
  },
  "scripts": {
    "post-install-cmd": [
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility"
    ],
    "post-update-cmd": [
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/phpcompatibility/php-compatibility"
    ],
    "lint": "phpcs -p app functions.php",
    "fix": "phpcbf -p app functions.php",
    "fmt": "php-cs-fixer fix --allow-risky=yes"
  }
}

